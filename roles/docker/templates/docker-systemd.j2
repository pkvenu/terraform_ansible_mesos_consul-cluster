[Unit]
Description=Docker Application Container Engine
Documentation=https://docs.docker.com
After=network.target


[Service]
Type=notify
ExecStart=/usr/bin/docker -d -H tcp://0.0.0.0:2376 -H unix:///var/run/docker.sock
MountFlags=slave
LimitNOFILE=1048576
LimitNPROC=1048576
LimitCORE=infinity

[Install]
WantedBy=multi-user.target